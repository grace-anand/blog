---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
}
const { post } = Astro.props;
const { data: postData, slug } = post
---
<a class="p-3 bg-card rounded-md" href={`/${slug}/`}>
  <div class="p-2">
    <img src={postData.heroImage} alt="post img" class="rounded-sm" transition:name={slug}>
  </div>
  <div class="p-3">
    <h3 class="text-2xl text-bk-purple-300">{ postData.title }</h3>
    <p class="line-clamp-3">{ postData.description }</p>
  </div>
</a>