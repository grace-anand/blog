{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"],
      "@config/*": ["config/*"]
    }
  }
}
